<link href="/admin/files?name=ClientInfo&type=css" rel="stylesheet"/>
<h3>{{name}}</h3>
{{#dest}}
<em>{{.}}</em>
{{/dest}}
<div><a href="/admin/metrics_graphs#clnt/{{name}}/">View metrics graphs for {{name}}</a></div>
<h3>Configuration</h3>
<div id="client"> 
  <div class="row">
   <div class="col-md-12">
      <div id="client-configuration" class="tabbable tabs-left">
        <ul class="nav nav-tabs">
          {{#modules}}
          <li>
            <a href="#{{role}}" data-toggle="tab">{{role}}</a>
          </li>
          {{/modules}}
        </ul>
        <div class="tab-content">
          {{#modules}}
          <div class="tab-pane" id="{{role}}">
            <div style="display:inline-block; width:50%">
              <h3>{{role}}</h3>
              <h5><em>{{description}}</em></h5>
              {{#perModuleParams.length}}
              <table class="table table-condensed table-bordered">
                <thead>
                  <tr>
                    <th>Parameter</th>
                    <th>Value</th>
                  </tr>
                </thead>
                <tbody>
                {{#perModuleParams}}
                  <tr>
                    <td>{{key}}</td>
                    <td>{{value}}</td>
                  </tr>
                  {{/perModuleParams}}
                </tbody>
              </table>
              {{/perModuleParams.length}}
            </div>
          </div>
          {{/modules}}
        </div>
      </div>
    </div>
  </div>
</div>
<div>
  <em>Click on a module to view its configuration parameters</em>
</div>

